@model IEnumerable<LegalAndGeneralConsultantCRM.ViewModels.NotificationViewModel>

@foreach (var notification in Model)
{
    <div class="notification-item @(!notification.IsRead ? "unread" : "")" data-id="@notification.NotificationId">
        <p>@notification.Message</p>
        <button class="mark-as-read" data-id="@notification.NotificationId">Mark as Read</button>
    </div>
}
