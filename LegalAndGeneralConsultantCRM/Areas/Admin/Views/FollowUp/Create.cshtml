@model LegalAndGeneralConsultantCRM.Models.LeadFollowUp.FollowUp

<style>
    .border1 {
        border: 2px solid #605e5e4c;
        padding: 10px;
        border-radius: 6px;
        margin: 20px 0px;
    }

    legend {
        background-color: lightgray;
        width: auto;
        padding: 5px 10px;
        border-radius: 4px;
        margin-top: -30px;
        font-size: medium;
        margin-left: 5%;
        font-weight: bold;
        font-family: arial;
    }

    .wor {
        margin-top: 20px;
    }
</style>


<br />

<main id="main" class="main ">
    <br/>

    <section class="section" style="width: 100%;">
        <div class="row col-md-12" style="width: 100%;margin: auto;">
            <div class="col-md-8" style="margin: auto;">



                <div class="card" style="width: 100%">
                    <div class="card-body">
 
                        <!-- Multi Columns Form -->
                        <form class="row g-3 g-3 needs-validation" novalidate asp-controller="Leadfollowup" asp-action="Create" method="post" asp-area="Employee">
                            <div class="col-md-12 border1">
                                <legend>Lead Management</legend>


                                <div class="col-md-12">
                                    <label for="inputCity" class="form-label">Employee</label>
                                    @Html.DropDownListFor(model => model.EmployeeId, (SelectList)ViewBag.UserList, "--- Select Employee ---", new { @class = "form-control" })

                                </div>
                                <div class="col-md-12">
                                    <label for="inputCity" class="form-label">Status</label>
                                    <select asp-for="Status" class="form-control" >
                                        <option value="" disabled selected>--- Select Lead Status ---</option>

                                        <option>Hot Lead</option>
                                        <option>Dead Lead</option>
                                        <option>Cold Lead</option>
                                        <option>Future Lead</option>
                                        <option>Warm Lead</option>
                                        <option>Converted Lead</option>

                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="reminderDateTime">Reminder Date and Time</label>
                                    <input type="text" class="form-control" id="reminderDateTime" name="FollowUpReminder">
                                </div>

                                <div class="form-group">
                                    <label for="reminderCount">Reminder Count</label>
                                    <select class="form-control" id="FollowUpReminder" name="Reminder">
                                        <option value="">-- Select Hours --</option>
                                        <option value="1">1 Hour</option>
                                        <option value="2">2 Hours</option>
                                        <option value="3">3 Hours</option>
                                        <option value="5">5 Hours</option>
                                        <option value="6">6 Hours</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="Priorty">Set Pariorties</label>
                                    <select class="form-control" id="FollowUpReminder" name="Priorty">
                                        <option value="">-- Select Priorties --</option>
                                        <option value="VeryUrgent">Very Urgent</option>
                                        <option value="Urgent">Urgent</option>
                                        <option value="Important">Important</option>
                                        <option value="Less important">Less important</option>
                                        <option value="Normal">Normal</option>
                                    </select>
                                </div>


                                <div class="form-group">
                                    <label for="eventThemeColor">Theme Color</label>
                                    <select class="form-control" id="eventThemeColor" name="ThemeColor" required>
                                        <option value="red">Red</option>
                                        <option value="blue">Blue</option>
                                        <option value="green">Green</option>
                                        <option value="yellow">Yellow</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="description">Notes</label>
                                    <textarea class="form-control" id="description" name="description"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="FollowUpDate" class="form-label">Follow-Up-Date </label>
                                        <input asp-for="FollowUpDate" type="date" class="form-control" required>
                                        <div class="invalid-feedback">Please enter your Company.</div>
                                    </div>

                                    <div class="col-md-6">
                                        <label for="Reminder" class="form-label">Next-Follow-Up-Reminder</label>
                                        <input asp-for="Reminder" type="date" class="form-control" required>
                                        <div class="invalid-feedback">Please enter your Company.</div>
                                    </div>
                                </div>




                                <div class="col-md-12 mt-2">
                                    <div class="float-end">
                                        <button type="submit" class="btn btn-primary  float-right">FollowUp</button>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <!-- End Multi Columns Form -->
                    </div>
                </div>

            </div>


        </div>
    </section>
</main> 